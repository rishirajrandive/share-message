<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
  <script src="javascripts/messages.js"></script>
  <!-- Include Bootstap CDN-->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <!-- Include custom CSS -->
  <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body ng-app="messages" ng-controller="Home">
<div>
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">Fill in the details</div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <div class="error-msg" ng-show="error">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                {{ error_msg }}
              </div>
              <form class="css-form" name="form" novalidate>
                <div class="form-group">
                  <h5><label for="inputMobileOrEmail">Mobile or Email</label></h5>
                  <input id="inputMobileOrEmail" type="text" name="mobileOrEmail" tabindex="1" class="form-control"
                         placeholder="Enter a mobile number or email address..." required ng-model="details.contact">
                  <div ng-show="form.$submitted">
                    <div ng-show="form.mobileOrEmail.$error.required">
                      <span> Valid mobile (+15558675309) or email (abc@xyz.com) is required</span>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <h5><label for="inputMessage">Message</label></h5>
                  <textarea id="inputMessage" tabindex="2" class="form-control"
                            placeholder="Enter the message here..."required ng-model="details.message"></textarea>
                  <div ng-show="form.$submitted">
                    <div ng-show="form.mobileOrEmail.$error.required">
                      <span> Message cannot be empty</span>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-12">
                      <input ng-click="validateAndSend(details)" type="submit" name="details-submit"
                             class="form-control btn btn-primary" tabindex="3" value="Submit">
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>